extends layouts/layout
block content
	// hero
	.hero
		.hero__slide(style="background-image: url(img/bg-hero.jpg)")
			.hero__container.container
				.hero__inner
					h1.hero__title Looking for a car, <span>but cannot find the right one to fit your budget?</span>
					.hero__text
						p
							strong Let us help!
						p We are small company that works for quality not quantity!
					a.btn(href='#') More info
					+arrows
	// section
	.section(style="background-image: url(img/bg-figures.svg)")
		.section__container.container
			.title-button
				h2.title Our inventory
				a.btn.btn--stroke(href="#") See all
			ul.catalog
				if cars && cars.length > 0
					each item in cars
						if item.show_on_page
							li
								+card(item)
				else
					p No cars found.
			h2.title Auto news
			ul.news
				li
					a.news__link(href="#")
						img(src="img/news-1.jpg", alt="")
						.news__inner
							.news__title Certified Pre-Owned vs. Used Cars
